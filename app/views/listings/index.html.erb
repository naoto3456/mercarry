<h3>Fillter<h3>
<div class ='row'>
	<%= form_tag (listings_path) ,method:'get' do %>
		<div class="col-xs-4">
			<%= text_field_tag :category, '', class:'form-control', placeholder:'Category' %>
		</div>
		<div class="col-xs-6">
			<%= text_field_tag :keyword, '', class:'form-control', placeholder:'KEYWORD'%>
		</div>
		<div class="col-xs-2">
		<%= submit_tag "Search", class: 'btn btn-primary' %>
		</div>
	<% end %>
</div>

<h3>Listings<h3>
<div class ='row'>
	<div class ='items_boxes'>
			<% @listings.each do |listing| %>
				<div class="col-xs-4">
					<div class ='items_box'>

						<%= image_tag("#{listing.photo.thumb.url}") %>
						<p><%= link_to "#{listing.name}", listing_path(listing) %> </p>
						<p>$<%= listing.price %></p>
				</div>
			</div>
	</div>
<div>
<% end %>
